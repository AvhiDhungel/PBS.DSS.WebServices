<MudPaper Style="max-width:max-content; width:90%; height:85%; display:flex; align-self:center; background-color:inherit;" Elevation="0">
    @if (Attachment.Name.ToLower().EndsWith(".mov") || Attachment.Name.ToLower().EndsWith(".mp4"))
    {
        <video controls
               muted
               loop
               playsinline>
            <source src=@($"https://documents.pbsdealers.com/api/Stream/{DeploymentId}/{Attachment.AttachmentRef}") />
        </video>
    }
    else
    {
        <MudImage Src="@($"data:img/png;base64,{Convert.ToBase64String(Attachment.Content)}")"
                  Fluid="true"
                  ObjectFit="ObjectFit.ScaleDown" />
    }
</MudPaper>

@code {
    [Parameter]
    public Attachment Attachment { get; set; } = new();
    [Parameter]
    public Guid DeploymentId { get; set; } = Guid.Empty;


}
