<MudDialog Class="mud-busy-dialog">
    <DialogContent>
        <MudPaper Elevation="0" Class="d-flex align-content-center flex-wrap flex-grow-1 gap-4" MinHeight="300px" MinWidth="300px">
            <MudGrid Justify="Justify.Center">
                <MudItem>
                    <MudStack>
                        <MudProgressCircular Color="Color.Inherit" Indeterminate="true" Size="Size.Large" />
                        <MudText>@Message</MudText>
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudPaper>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public string Message { get; set; } = "Loading...";
}