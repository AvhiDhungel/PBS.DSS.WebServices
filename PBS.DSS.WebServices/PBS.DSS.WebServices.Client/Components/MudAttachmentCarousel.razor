<MudCarousel TData="@Attachment"
             ShowArrows="true"
             ShowBullets="true"
             AutoCycle="false"
             Style="height:47em;">

    @foreach (var a in Attachments)
    {
        <MudCarouselItem Transition="Transition.Slide" Style="display:flex; justify-content:center; align-items:center; height:90%">
            <MudAttachment Attachment="a" DeploymentId="DeploymentId" />
        </MudCarouselItem>
    }
</MudCarousel>

@code {
    [Parameter]
    public List<Attachment> Attachments { get; set; } = new();
    [Parameter]
    public Guid DeploymentId { get; set; } = Guid.Empty;
}
