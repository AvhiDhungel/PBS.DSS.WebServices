<MudCarousel TData="@Attachment"
             ShowArrows="true"
             ShowBullets="true"
             AutoCycle="false"
             NextIcon="@Icons.Material.Outlined.ArrowForwardIos"
             PreviousIcon="@Icons.Material.Outlined.ArrowBackIos"
             SelectedIndex="0"
             BulletsColor="Color.Primary"
             Class="@MudClasses.MediaCarousel.GetClass()">

    @foreach (var a in Attachments)
    {
        <MudCarouselItem Transition="Transition.Slide" Style="display:flex; justify-content:center; align-items:center;">
            <MudAttachment Attachment="a" DeploymentId="DeploymentId" />
        </MudCarouselItem>
    }
</MudCarousel>

@code {
    [Parameter]
    public List<Attachment> Attachments { get; set; } = new();
    [Parameter]
    public Guid DeploymentId { get; set; } = Guid.Empty;
}
