<MudThemeProvider Theme="Theme" IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@code {
    private MudTheme Theme { get; set; } = new();

    protected override void OnInitialized()
    {
        SnackbarService.Clear();
        SnackbarService.Configuration.PositionClass = Defaults.Classes.Position.TopRight;
        SnackbarService.Configuration.MaxDisplayedSnackbars = 5;
        SnackbarService.Configuration.SnackbarVariant = Variant.Filled;
        SnackbarService.Configuration.PreventDuplicates = true;

        Theme.PaletteDark.AppbarBackground = Colors.Shades.Black;
        Theme.PaletteDark.Primary = Colors.Shades.White;
    }
}