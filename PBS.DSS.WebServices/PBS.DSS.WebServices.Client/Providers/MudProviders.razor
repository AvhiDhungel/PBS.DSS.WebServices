<MudThemeProvider Theme="Theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

@code {
    private MudTheme Theme { get; set; } = new();

    protected override void OnInitialized()
    {
        SnackbarService.Clear();
        SnackbarService.Configuration.PositionClass = Defaults.Classes.Position.TopRight;
        SnackbarService.Configuration.MaxDisplayedSnackbars = 5;
        SnackbarService.Configuration.SnackbarVariant = Variant.Filled;
        SnackbarService.Configuration.PreventDuplicates = true;

        Theme.PaletteLight.AppbarBackground = Colors.Blue.Darken3;
        Theme.PaletteLight.Primary = Colors.Blue.Darken3;
        Theme.PaletteLight.Secondary = Colors.Purple.Darken3;
        Theme.PaletteLight.Tertiary = Colors.Blue.Darken1;
    }
}